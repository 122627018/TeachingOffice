<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
         <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">#009af7</item>
        <item name="android:homeAsUpIndicator">@drawable/xsearch_loading</item>
       <!--   <item name="homeAsUpIndicator">@drawable/xsearch_loading</item>-->
        <item name="android:displayOptions">homeAsUp|showHome</item>
        <item name="displayOptions">homeAsUp|showHome</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/actionBarStyle</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/xsearch_loading</item>
        <item name="homeAsUpIndicator">@drawable/xsearch_loading</item>
    </style>

    <style name="actionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">#009af7</item>
        <item name="background">#009af7</item>
        <item name="android:displayOptions">homeAsUp|showHome</item>
        <item name="displayOptions">homeAsUp|showHome</item>
    </style>

</resources>